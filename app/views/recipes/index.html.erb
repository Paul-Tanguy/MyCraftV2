<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Materials</th>
      <th>Quantity</th>
      <th>Extra</th>
      <th>Priority</th>
      <th>Image</th>
      <th>Mod</th>
      <th>Machine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name.prettyM, recipe %></td>
        <td><%= recipe.materials %></td>
        <td><%= recipe.quantity %></td>
        <td><%= recipe.extra %></td>
        <td><%= recipe.priority %></td>
        <td><%= recipe.image %></td>
        <td><%= recipe.mod %></td>
        <td><%= recipe.machine %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
